@page
@model WebSiteProjectRacerPage.Pages.AdminModel
@{
    ViewData["Title"] = "Admin";
}
@section Styles {
    <link href="//cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <link href="//cdn.quilljs.com/1.3.6/quill.bubble.css" rel="stylesheet">
}

<h2>Admin</h2>
<p>Here you can edit the text for About me:</p>
<div id="editor"></div>
<form method="post" enctype="multipart/form-data">
<textarea id="area1" style="width: 100%" asp-for="AboutMeText"> </textarea>
    <input type="submit" value="Gem">
</form>
<div style="padding-top: 10px">
    <a asp-page="/ImageUpload">click here if you want to upload a picture to the gallery</a>
</div>

<div style="padding-top: 10px">
    <p>Here is all the email that is subbcribed to News</p>
    <ol type="I">
        @foreach (var email in Model.Subbs)
        {
            if (email != String.Empty)
            {
                <li>@email</li>
            }
        }
    </ol>
</div>
@section Scripts {
    <script src="~/js/nicEdit.js"></script>
    <script>
        new nicEditor({ fullPanel: true }).panelInstance('area1');
        </script>
}